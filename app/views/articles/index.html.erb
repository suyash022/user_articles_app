<h1>Listing Articles</h1>
<%= link_to 'New article', new_user_article_path %>
<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>

  <% @user.articles.each do |article| %>
    <tr>
      <td><%= article.author %></td>
      <td><%= article.title %></td>
      <td><%= link_to 'Show', user_article_path(@user, article) %></td>
      <td><%= link_to 'Edit', edit_user_article_path(@user, article) %></td>
      <td><%= link_to 'Destroy', user_article_path(@user, article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>